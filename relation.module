/**
 * Create a relation.
 *
 * @param $entity_keys
 *   A list of (entity_type, entity_id) pairs.
 * @return
 *   The new relation id.
 */
function relation_create($predicate, $entity_keys) {
  $relation_id = db_insert('relation')
    ->useDefaults(array('relation_id'))
    ->fields(array('predicate' => $predicate, 'max_ary' => count($entity_keys) - 1))
    ->execute();
  $query = db_insert('relation_data')
    ->fields(array('relation_id', 'entity_type', 'entity_id', 'ary'));
  foreach ($entity_keys as $ary => $entity_key) {
    $query->values(array($relation_id, $entity_key[0], $entity_key[1], $ary));
  }
  $query->execute();
  return $relation_id;
}

function relation_validate($predicate, $entity_keys) {
  return (!isset($entity_keys[2]) || variable_get("relation_arity_$predicate"));
}

